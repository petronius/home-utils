
set hidden
set wildmenu
set showcmd
set hlsearch

set ignorecase
set smartcase

set autoindent

set ruler

set laststatus=2

set confirm
set visualbell

filetype plugin on
filetype indent plugin on
syntax on

if has('gui_running')
    colorscheme moria
    hi Normal guibg=#161616 ctermbg=none
endif

set shiftwidth=4
set softtabstop=4
set expandtab

if exists('&relativenumber')
    set relativenumber
else
    set number
endif

filetype plugin indent on

au BufNewFile,BufReadPost *.dasm,*.dasm16 setl shiftwidth=2 expandtab

